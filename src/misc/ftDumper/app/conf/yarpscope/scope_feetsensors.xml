<!-- 
Scope for force/torque sensor measurements in the iCub feet 
Author: Serena Ivaldi 

This xml file must be used with yarpscope: it plots by columns the forces and moments of the 6 axis F/T sensors of the iCub feet, and the estimated forces/moments relying on the other 6 axis FT sensor in the legs. -->

<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="2" columns="6" carrier="udp">

  
    
<!-- RIGHT LEG -->

    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="R-foot from FT-leg - Forces"
          minval="-200"
          maxval="200"
          bgcolor="#ccFFcc">
        <graph remote="/wholeBodyDynamics/right_leg/endEffectorWrench:o"
               index="0"
               color="Red"
               title="F1"
               type="lines"
               size="2" />
        <graph remote="/wholeBodyDynamics/right_leg/endEffectorWrench:o"
               index="1"
               color="Green"
               title="F2"
               size="2"
               type="lines" />
        <graph remote="/wholeBodyDynamics/right_leg/endEffectorWrench:o"
               index="2"
               color="Blue"
               title="F3"
               size="2"
               type="lines" />
    </plot>
    
    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="1"
          title="R-foot from FTS-leg - Moments"
          minval="-15"
          maxval="15"
          bgcolor="#ddffdd">
        <graph remote="/wholeBodyDynamics/right_leg/endEffectorWrench:o"
               index="3"
               color="Red"
               title="M1"
               size="2"
               type="lines" />
        <graph remote="/wholeBodyDynamics/right_leg/endEffectorWrench:o"
               index="4"
               color="Green"
               title="M2"
               size="2"
               type="lines" />
        <graph remote="/wholeBodyDynamics/right_leg/endEffectorWrench:o"
               index="5"
               color="Blue"
               title="M3"
               size="2"
               type="lines" />
    </plot>
    
        
